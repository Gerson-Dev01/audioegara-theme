{% style %}
  /* Aislamiento de la sección de contacto */
  #contacto {
    padding-top: 100px !important;
    margin-top: -100px !important;
    scroll-margin-top: 100px !important;
    all: initial; /* Reset drástico */
    display: block !important;
  }
  
  .ae-contact-section {
    padding: 80px 20px !important;
    background-color: #F7F7F7 !important;
    position: relative !important;
    font-family: 'Open Sans', sans-serif !important;
    color: #333 !important;
    box-sizing: border-box !important;
  }
  
  .ae-contact-container {
    max-width: 1200px !important;
    margin: 0 auto !important;
    display: grid !important;
    grid-template-columns: 1fr 1fr !important;
    gap: 60px !important;
  }
  
  .ae-contact-info {
    padding: 30px !important;
    display: block !important;
  }
  
  .ae-contact-title {
    font-size: 36px !important;
    font-weight: 700 !important;
    margin-bottom: 25px !important;
    color: #333 !important;
    position: relative !important;
    display: block !important;
    width: 100% !important;
    font-family: 'Montserrat', sans-serif !important;
  }
  
  .ae-contact-title:after {
    content: "" !important;
    position: absolute !important;
    bottom: -12px !important;
    left: 0 !important;
    width: 80px !important;
    height: 4px !important;
    background-color: #51b1e4 !important;
  }
  
  .ae-contact-description {
    font-size: 18px !important;
    color: #666 !important;
    line-height: 1.6 !important;
    margin-bottom: 40px !important;
    display: block !important;
    width: 100% !important;
  }
  
  .ae-contact-details {
    margin-bottom: 40px !important;
    display: block !important;
  }
  
  .ae-contact-detail {
    display: flex !important;
    align-items: flex-start !important;
    margin-bottom: 25px !important;
  }
  
  .ae-contact-icon {
    margin-right: 15px !important;
    min-width: 24px !important;
    color: #51b1e4 !important;
    margin-top: 4px !important;
  }
  
  .ae-contact-detail-content h3 {
    font-size: 18px !important;
    font-weight: 600 !important;
    margin-bottom: 5px !important;
    color: #333 !important;
    display: block !important;
  }
  
  .ae-contact-detail-content p,
  .ae-contact-detail-content a {
    font-size: 16px !important;
    color: #555 !important;
    text-decoration: none !important;
    transition: color 0.3s ease !important;
    display: block !important;
  }
  
  .ae-contact-detail-content a:hover {
    color: #51b1e4 !important;
  }
  
  .ae-business-hours h3 {
    font-size: 18px !important;
    font-weight: 600 !important;
    margin-bottom: 15px !important;
    color: #333 !important;
    display: block !important;
  }
  
  .ae-business-hours p {
    font-size: 16px !important;
    color: #555 !important;
    margin-bottom: 8px !important;
    display: flex !important;
    justify-content: space-between !important;
  }
  
  .ae-business-hours span {
    font-weight: 500 !important;
  }
  
  .ae-contact-form-container {
    background: white !important;
    border-radius: 16px !important;
    padding: 40px !important;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08) !important;
  }
  
  .ae-form-title {
    font-size: 24px !important;
    font-weight: 600 !important;
    margin-bottom: 25px !important;
    color: #333 !important;
    display: block !important;
  }
  
  .ae-contact-form {
    display: grid !important;
    grid-template-columns: 1fr !important;
    gap: 20px !important;
  }
  
  .ae-form-group {
    margin-bottom: 15px !important;
    display: block !important;
  }
  
  .ae-form-group label {
    display: block !important;
    margin-bottom: 8px !important;
    font-weight: 500 !important;
    color: #555 !important;
    font-size: 15px !important;
  }
  
  .ae-form-group input,
  .ae-form-group textarea {
    width: 100% !important;
    padding: 14px !important;
    border: 1px solid #ddd !important;
    border-radius: 8px !important;
    font-size: 16px !important;
    transition: border-color 0.3s ease, box-shadow 0.3s ease !important;
    display: block !important;
    box-sizing: border-box !important;
  }
  
  .ae-form-group input:focus,
  .ae-form-group textarea:focus {
    border-color: #51b1e4 !important;
    box-shadow: 0 0 0 2px rgba(255, 85, 0, 0.1) !important;
    outline: none !important;
  }
  
  .ae-form-group textarea {
    min-height: 150px !important;
    resize: vertical !important;
  }
  
  .ae-form-button {
    background-color: #51b1e4 !important;
    color: white !important;
    border: none !important;
    padding: 15px 30px !important;
    border-radius: 8px !important;
    font-size: 16px !important;
    font-weight: 600 !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
    width: 100% !important;
    margin-top: 10px !important;
    display: block !important;
  }
  
  .ae-form-button:hover {
    background-color: #51b1e4 !important;
    transform: translateY(-3px) !important;
    box-shadow: 0 4px 15px rgba(255, 85, 0, 0.3) !important;
  }
  
  .ae-map-container {
    margin-top: 60px !important;
    border-radius: 16px !important;
    overflow: hidden !important;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important;
    height: 400px !important;
    display: block !important;
  }
  
  .ae-map-container iframe {
    width: 100% !important;
    height: 100% !important;
    border: none !important;
    display: block !important;
  }
  
  @media (max-width: 992px) {
    .ae-contact-container {
      grid-template-columns: 1fr !important;
      gap: 40px !important;
    }
    
    .ae-contact-info {
      padding: 0 !important;
    }
    
    .ae-contact-title:after {
      left: 50% !important;
      transform: translateX(-50%) !important;
    }
    
    .ae-contact-info,
    .ae-contact-form-container {
      text-align: center !important;
    }
    
    .ae-contact-detail {
      justify-content: center !important;
    }
    
    .ae-business-hours p {
      justify-content: center !important;
      gap: 20px !important;
    }
  }
  
  @media (max-width: 576px) {
    #contacto {
      padding-top: 80px !important;
      margin-top: -80px !important;
      scroll-margin-top: 80px !important;
    }
    
    .ae-contact-section {
      padding: 60px 15px !important;
    }
    
    .ae-contact-title {
      font-size: 28px !important;
    }
    
    .ae-contact-description {
      font-size: 16px !important;
    }
    
    .ae-contact-form-container {
      padding: 25px !important;
    }
    
    .ae-map-container {
      height: 300px !important;
      margin-top: 40px !important;
    }
  }
  .reason-display {
  background-color: #f8f9fa;
  padding: 15px;
  border-radius: 8px;
  margin-bottom: 20px;
  text-align: center;
}

.reason-display p {
  margin: 0;
  font-size: 16px;
  color: #333;
}

.whatsapp-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: #25D366;
  color: white;
  padding: 15px 30px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  text-decoration: none;
  transition: all 0.3s ease;
  width: 100%;
  margin-top: 10px;
}

.whatsapp-button:hover {
  background-color: #128C7E;
  transform: translateY(-3px);
  box-shadow: 0 4px 15px rgba(37, 211, 102, 0.3);
}

.whatsapp-button svg {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

@media (min-width: 768px) {
  .ae-contact-form-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .ae-form-button,
  .whatsapp-button {
    width: auto;
  }
}

{% endstyle %}

<section id="contacto" class="ae-contact-section">
<div class="ae-contact-form-container">
  <h3 class="ae-form-title">Envíanos un mensaje</h3>

  {% if request.params.reason %}
    <div class="reason-display">
      <p>Estás contactando por: <strong>{{ request.params.reason }}</strong></p>
    </div>
  {% endif %}

  {% form 'contact' %}
    {% if form.posted_successfully? %}
      <p class="ae-form-success">¡Gracias por tu mensaje! Te contactaremos pronto.</p>
    {% endif %}

    <div class="ae-contact-form">
      <div class="ae-form-group">
        <label for="ContactFormName">Nombre completo</label>
        <input type="text" id="ContactFormName" name="contact[name]" required>
      </div>
      <div class="ae-form-group">
        <label for="ContactFormEmail">Correo electrónico</label>
        <input type="email" id="ContactFormEmail" name="contact[email]" required>
      </div>
      <div class="ae-form-group">
        <label for="ContactFormPhone">Teléfono (con código de país, ej: +34)</label>
        <input type="tel" id="ContactFormPhone" name="contact[phone]">
      </div>
      <div class="ae-form-group">
        <label for="ContactFormMessage">Mensaje</label>
        <textarea id="ContactFormMessage" name="contact[body]" required>
{% if request.params.reason %}
Razón del contacto: {{ request.params.reason }}

{% endif %}</textarea>
      </div>
      <!-- Campo oculto para el asunto -->
      <input type="hidden" name="contact[subject]" value="{{ request.params.reason | default: 'Consulta general' }}">
    </div>
    <button type="submit" class="ae-form-button">Enviar mensaje por correo</button>
  {% endform %}

  <!-- Botón de WhatsApp -->
  {% assign whatsapp_number = '34600000000' %}
  <a
    href="https://wa.me/{{ whatsapp_number }}?text=Hola,%20me%20gustaría%20solicitar%20información%20sobre:%20{{ request.params.reason | url_encode | default: 'un%20servicio' }}"
    class="whatsapp-button"
    target="_blank"
  >
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M21.373 12.905c-.898-4.281-4.782-7.584-9.545-7.93C7.007 4 1.988 6.73 1.988 10.273c0 2.608 1.61 4.94 3.915 6.227l-1.642 4.434C3.33 20.83 4.71 22 6.6 22c5.503 0 11.727-5.682 12.777-12.023z" fill="currentColor"/>
    </svg>
    Contactar por WhatsApp
  </a>
</div>

  
  <div class="ae-map-container">
    {% if section.settings.mapa_url %}
      <iframe
        src="{{ section.settings.mapa_url }}"
        allowfullscreen=""
        loading="lazy"
      ></iframe>
    {% else %}
      <div style="background: #e0e0e0; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #999;">
        <p>Por favor, añade la URL del mapa en la configuración</p>
      </div>
    {% endif %}
  </div>
</section>

