{% style %}
  /* Secci贸n de contacto moderna */
  #contacto {
    padding-top: 80px;
    margin-top: -80px;
    scroll-margin-top: 80px;
    display: block;
  }

  .ae-contact-section {
    padding: 60px 20px;
    background-color: #f8f9fa;
    font-family: 'Open Sans', sans-serif;
    color: #333;
    box-sizing: border-box;
  }

  .ae-contact-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  .ae-contact-info {
    padding: 20px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .ae-contact-title {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 20px;
    color: #333;
    font-family: 'Montserrat', sans-serif;
    position: relative;
    display: inline-block;
  }

  .ae-contact-title:after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 3px;
    background-color: #51b1e4;
  }

  .ae-contact-description {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 30px;
  }

  .ae-contact-details {
    margin-bottom: 30px;
  }

  .ae-contact-detail {
    display: flex;
    align-items: flex-start;
    margin-bottom: 20px;
  }

  .ae-contact-icon {
    margin-right: 15px;
    min-width: 24px;
    color: #51b1e4;
    margin-top: 2px;
    font-size: 20px;
  }

  .ae-contact-detail-content h3 {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 8px;
    color: #333;
  }

  .ae-contact-detail-content p,
  .ae-contact-detail-content a {
    font-size: 16px;
    color: #555;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ae-contact-detail-content a:hover {
    color: #51b1e4;
  }

  .ae-business-hours {
    margin-top: 20px;
  }

  .ae-business-hours h3 {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 15px;
    color: #333;
  }

  .ae-business-hours p {
    font-size: 16px;
    color: #555;
    margin-bottom: 8px;
    display: flex;
    justify-content: space-between;
  }

  .ae-business-hours span {
    font-weight: 500;
  }

  .ae-contact-form-container {
    background: white;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .ae-form-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 20px;
    color: #333;
  }

  .ae-contact-form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .ae-form-group {
    margin-bottom: 15px;
  }

  .ae-form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: #555;
    font-size: 15px;
  }

  .ae-form-group input,
  .ae-form-group textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 16px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .ae-form-group input:focus,
  .ae-form-group textarea:focus {
    border-color: #51b1e4;
    box-shadow: 0 0 0 2px rgba(81, 177, 228, 0.2);
    outline: none;
  }

  .ae-form-group textarea {
    min-height: 150px;
    resize: vertical;
  }

  .ae-form-button {
    background-color: #51b1e4;
    color: white;
    border: none;
    padding: 14px 28px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    margin-top: 10px;
  }

  .ae-form-button:hover {
    background-color: #3a9dd6;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(81, 177, 228, 0.3);
  }

  .whatsapp-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: #25D366;
    color: white;
    padding: 14px 28px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
    width: 100%;
    margin-top: 10px;
  }

  .whatsapp-button:hover {
    background-color: #128C7E;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 211, 102, 0.3);
  }

  .whatsapp-button svg {
    width: 20px;
    height: 20px;
    margin-right: 10px;
  }

  .ae-map-container {
    margin-top: 40px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    height: 400px;
  }

  .ae-map-container iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  .reason-display {
    background-color: #f8f9fa;
    padding: 12px;
    border-radius: 8px;
    margin-bottom: 20px;
    text-align: center;
  }

  .reason-display p {
    margin: 0;
    font-size: 15px;
    color: #333;
  }

  @media (max-width: 992px) {
    .ae-contact-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ae-contact-info,
    .ae-contact-form-container {
      text-align: center;
    }

    .ae-contact-detail {
      justify-content: center;
    }

    .ae-business-hours p {
      justify-content: center;
      gap: 20px;
    }
  }

  @media (max-width: 576px) {
    #contacto {
      padding-top: 60px;
      margin-top: -60px;
      scroll-margin-top: 60px;
    }

    .ae-contact-section {
      padding: 40px 15px;
    }

    .ae-contact-title {
      font-size: 26px;
    }

    .ae-contact-description {
      font-size: 15px;
    }

    .ae-contact-form-container {
      padding: 20px;
    }

    .ae-map-container {
      height: 300px;
      margin-top: 30px;
    }
  }
{% endstyle %}

