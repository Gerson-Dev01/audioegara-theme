            <input type="text" id="ContactFormName" name="contact[name]" required>
          </div>
          <div class="ae-form-group">
            <label for="ContactFormEmail">Correo electr贸nico</label>
            <input type="email" id="ContactFormEmail" name="contact[email]" required>
          </div>
          <div class="ae-form-group">
            <label for="ContactFormPhone">Tel茅fono (con c贸digo de pa铆s, ej: +34)</label>
            <input type="tel" id="ContactFormPhone" name="contact[phone]">
          </div>
          <div class="ae-form-group">
            <label for="ContactFormMessage">Mensaje</label>
            <textarea id="ContactFormMessage" name="contact[body]" required></textarea>
          </div>
          <input type="hidden" name="contact[subject]" value="{{ request.params.reason | default: 'Consulta general' }}">
        </div>

        <button type="submit" class="ae-form-button">Enviar mensaje</button>
      {% endform %}

      <!-- Bot贸n de WhatsApp -->
