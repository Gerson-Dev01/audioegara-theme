{% style %}
  .footer {
    background-color: #1a1a1a;
    color: #ffffff;
    padding: 60px 0 30px;
    position: relative;
    overflow: hidden;
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }
  
  .footer-column h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 25px;
    position: relative;
    padding-bottom: 12px;
  }
  
  .footer-column h3::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 3px;
    background-color: #51b1e4;
  }
  
  .footer-logo {
    max-width: 180px;
    margin-bottom: 20px;
  }
  
  .footer-description {
    font-size: 0.95rem;
    line-height: 1.7;
    color: #b0b0b0;
    margin-bottom: 25px;
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 12px;
  }
  
  .footer-links a {
    color: #b0b0b0;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
  }
  
  .footer-links a:hover {
    color: #51b1e4;
    transform: translateX(5px);
  }
  
  .footer-links a::before {
    content: "›";
    color: #51b1e4;
    margin-right: 8px;
    font-weight: bold;
    transition: transform 0.3s ease;
  }
  
  .footer-links a:hover::before {
    transform: translateX(3px);
  }
  
  .contact-info {
    margin-bottom: 8px;
    display: flex;
    align-items: flex-start;
  }
  
  .contact-icon {
    color: #51b1e4;
    margin-right: 12px;
    min-width: 20px;
    margin-top: 4px;
  }
  
  .contact-text {
    color: #b0b0b0;
    line-height: 1.6;
  }
  
  .contact-text a {
    color: #b0b0b0;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .contact-text a:hover {
    color: #51b1e4;
  }
  
  .social-links {
    display: flex;
    gap: 15px;
    margin-top: 25px;
  }
  
  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: #2a2a2a;
    border-radius: 50%;
    transition: all 0.3s ease;
  }
  
  .social-icon:hover {
    background-color: #51b1e4;
    transform: translateY(-3px);
  }
  
  .social-icon svg {
    width: 18px;
    height: 18px;
    fill: white;
  }
  
  .footer-bottom {
    max-width: 1200px;
    margin: 50px auto 0;
    padding: 25px 20px 0;
    border-top: 1px solid #2a2a2a;
    text-align: center;
    color: #b0b0b0;
    font-size: 0.9rem;
  }
  
  .payment-methods {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 20px;
    flex-wrap: wrap;
  }
  
  .payment-icon {
    width: 50px;
    height: 30px;
    background-color: #2a2a2a;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .payment-icon svg {
    width: 30px;
    height: 20px;
    fill: #b0b0b0;
  }
  
  /* Elemento decorativo */
  .footer-decor {
    position: absolute;
    bottom: -50px;
    right: -50px;
    width: 200px;
    height: 200px;
    background: rgba(255, 85, 0, 0.1);
    border-radius: 50%;
    z-index: 0;
  }
  
  /* Responsive */
  @media (max-width: 992px) {
    .footer-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
    
    .footer-column:last-child {
      grid-column: span 2;
    }
  }
  
  @media (max-width: 576px) {
    .footer-container {
      grid-template-columns: 1fr;
    }
    
    .footer-column:last-child {
      grid-column: 1;
    }
    
    .footer {
      padding: 40px 0 20px;
    }
    
    .footer-bottom {
      padding-top: 20px;
    }
  }
{% endstyle %}

