{% comment %}
  collection.liquid - Plantilla básica para mostrar todos los productos de la colección sin paginación ni filtros.
{% endcomment %}

<div class="collection-container">
  <h1>{{ collection.title }}</h1>

  <!-- Depuración: Verificar productos en la colección -->
  <p>Total de productos en la colección: {{ collection.products.size }}</p>

  {% if collection.products.size > 0 %}
    <div class="product-grid">
      {% for product in collection.products %}
        <div class="product-item">
          <a href="{{ product.url }}">
            <h3>{{ product.title }}</h3>
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}">
            {% else %}
              <p>No hay imagen disponible</p>
            {% endif %}
            <p>{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No hay productos en esta colección.</p>
  {% endif %}
</div>

<style>
  .collection-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }

  .product-item {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: center;
  }

  .product-item img {
    max-width: 100%;
    height: auto;
  }
</style>
