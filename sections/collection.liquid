<style>
  .catalog-page {
    padding: 4rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    min-height: 100vh;
  }

  .catalog-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 5%; /* MODIFICADO */
  }

  /* Header Mejorado */
  .catalog-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
  }

  .catalog-badge {
    display: inline-block;
    background: var(--color-primary);
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .catalog-header h1 {
    font-family: var(--font-heading);
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #2c3e50, #3498db);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1.1;
  }

  .catalog-subtitle {
    font-size: 1.3rem;
    color: #64748b;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto 3rem;
    font-weight: 400;
  }

  .catalog-stats {
    display: flex;
    justify-content: center;
    gap: 4rem;
    margin: 3rem 0;
  }

  .stat-item {
    text-align: center;
    position: relative;
  }

  .stat-item:not(:last-child):after {
    content: "";
    position: absolute;
    right: -2rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 40px;
    background: #e2e8f0;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-primary);
    display: block;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.9rem;
    color: #64748b;
    font-weight: 500;
    margin-top: 0.5rem;
  }

  /* Toolbar Mejorada */
  .catalog-toolbar {
    background: white;
    padding: 1.5rem 2rem;
    border-radius: 16px;
    box-shadow: 0 4px 25px rgba(0,0,0,0.08);
    margin-bottom: 3rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1px solid #f1f5f9;
  }

  .catalog-filters {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .filter-select {
    padding: 0.875rem 1.75rem;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    color: #475569;
    background: white;
    min-width: 200px;
    appearance: none;
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'%3e%3cpath d='M7 10l5 5 5-5'/%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 1rem center;
    background-size: 1em;
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }


  .filter-button {
    padding: 0.875rem 1.75rem;
    background: transparent;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    color: #475569;
    position: relative;
    overflow: hidden;
  }

  .filter-button:before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-primary), #3b82f6);
    transition: left 0.3s ease;
    z-index: -1;
  }

  .filter-button:hover,
  .filter-button.active {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
  }

  .filter-button.active:before {
    left: 0;
  }

  .catalog-sort {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .sort-label {
    font-weight: 600;
    color: #334155;
    font-size: 0.9rem;
  }

  .sort-select {
    padding: 0.875rem 1rem;
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    font-family: var(--font-body);
    background: white;
    min-width: 200px;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .sort-select:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  /* Grid de Productos Mejorado */
