{% comment %}
  collection.liquid
  Colección con filtros nativos de Shopify por tipo de producto + paginación
{% endcomment %}

<div class="max-w-7xl mx-auto px-6 py-6">
  <h1 class="text-3xl font-bold mb-6">{{ collection.title }}</h1>

  {%- if collection.filters.size > 0 -%}
    <div class="mb-6">
      <form method="get" class="flex gap-4">
        {% for filter in collection.filters %}
          {% if filter.type == 'list' and filter.param_name == 'filter.p.product_type' %}
            <div>
              <label for="product-type" class="block text-sm font-medium mb-1">{{ filter.label }}</label>
              <select
                id="product-type"
                name="{{ filter.param_name }}"
                onchange="this.form.submit()"
                class="px-3 py-2 border border-gray-300 rounded-md"
              >
                <option value="">Todos</option>
                {% for value in filter.values %}
                  <option value="{{ value.value }}" {% if value.active %}selected{% endif %}>
                    {{ value.label }} ({{ value.count }})
                  </option>
                {% endfor %}
              </select>
            </div>
          {% endif %}
        {% endfor %}
      </form>
    </div>
  {%- endif -%}

  {% paginate collection.products by 12 %}
    {% if collection.products.size > 0 %}
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {% for product in collection.products %}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-image-wrapper">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.title }}"
                  loading="lazy"
                  class="w-full h-full object-contain transition-transform duration-300 hover:scale-105"
                >
              {% endif %}
            </a>
            <div class="product-info">
              <h3 class="product-title">{{ product.title }}</h3>
              <div class="product-price">{{ product.price | money }}</div>
              {% if collection.handle contains 'alquiler' %}
                <a href="{{ product.url }}" class="btn btn-outline-primary w-full">
                  Alquilar
                </a>
              {% else %}
                <a href="{{ product.url }}" class="btn btn-black w-full">
                  Comprar
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="text-center py-12">No hay productos que coincidan con el filtro.</p>
    {% endif %}

    {% if paginate.pages > 1 %}
      <nav class="mt-10 flex justify-between items-center text-sm">
        {% if paginate.previous %}
          <a href="{{ paginate.previous.url }}" class="font-semibold text-gray-900">← Anterior</a>
        {% endif %}
        <span>Página {{ paginate.current_page }} de {{ paginate.pages }}</span>
        {% if paginate.next %}
          <a href="{{ paginate.next.url }}" class="font-semibold text-gray-900">Siguiente →</a>
        {% endif %}
      </nav>
    {% endif %}
  {% endpaginate %}
</div>
