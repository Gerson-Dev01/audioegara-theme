    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .product-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 25px rgba(0,0,0,0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid #f8fafc;
    position: relative;
  }

  .product-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 25px 50px rgba(0,0,0,0.15);
  }

  .product-card:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, var(--color-primary), #3b82f6);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .product-card:hover:before {
    transform: scaleX(1);
  }

  /* üî• IMAGEN RESPONSIVA (MODIFICADO) */
  .product-image-container {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1; /* MODIFICADO */
    overflow: hidden;
    background: linear-gradient(135deg, #f8fafc, #e2e8f0);
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* MODIFICADO */
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-card:hover .product-image {
    transform: scale(1.1);
  }

  .product-badges {
    position: absolute;
    top: 15px;
    left: 15px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .product-badge {
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    color: white;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  }

  .badge-sale {
    background: linear-gradient(135deg, #ef4444, #dc2626);
  }

  .badge-new {
    background: linear-gradient(135deg, #10b981, #059669);
  }

  .badge-pro {
    background: linear-gradient(135deg, #8b5cf6, #7c3aed);
  }

  .badge-featured {
    background: linear-gradient(135deg, #f59e0b, #d97706);
  }

  .product-info {
    padding: 1.75rem;
  }

  .product-category {
    color: var(--color-primary);
    font-size: 0.8rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .product-category:before {
    content: "‚Ä¢";
    color: var(--color-primary);
    font-size: 1.2rem;
  }

  .product-title {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: #1e293b;
    line-height: 1.3;
    display: block;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .product-title:hover {
    color: var(--color-primary);
  }

  .product-description {
    color: #64748b;
    font-size: 0.95rem;
    line-height: 1.5;
    margin-bottom: 1.25rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-price {
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .current-price {
    font-size: 1.5rem;
    font-weight: 800;
    color: #1e293b;
  }

  .original-price {
    text-decoration: line-through;
    color: #94a3b8;
    margin-left: 0.5rem;
    font-size: 1.1rem;
  }

  .price-saving {
    background: #fef2f2;
    color: #dc2626;
    padding: 4px 10px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 0.8rem;
  }

  .product-actions {
    display: flex;
    gap: 0.75rem;
  }

  .btn-details {
    flex: 2;
    background: linear-gradient(135deg, var(--color-primary), #3b82f6);
    color: white;
    padding: 14px 24px;
    border: none;
    border-radius: 12px;
    font-family: var(--font-heading);
    font-weight: 700;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .btn-details:before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #3b82f6, var(--color-primary));
    transition: left 0.3s ease;
  }

  .btn-details:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
  }

  .btn-details:hover:before {
    left: 0;
  }

  .btn-details span {
    position: relative;
    z-index: 1;
  }

  .btn-quote {
    flex: 1;
    background: transparent;
    border: 2px solid #e2e8f0;
    color: #475569;
    padding: 14px;
    border-radius: 12px;
    font-family: var(--font-heading);
    font-weight: 600;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-quote:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.2);
  }

  /* Estados Vac√≠os */
  .catalog-empty {
    text-align: center;
    padding: 4rem 2rem;
    color: #64748b;
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    opacity: 0.5;
  }

  /* Secci√≥n de Ayuda Profesional Mejorada */
  .expert-help {
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    color: white;
    padding: 4rem 3rem;
    border-radius: 24px;
    margin: 4rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .expert-help:before {
    content: "";
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 200%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
  }

  .expert-help h3 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    position: relative;
  }

  .expert-help p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
    position: relative;
  }

  .btn-expert {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(135deg, var(--color-primary), #3b82f6);
    color: white;
    padding: 16px 32px;
    border-radius: 16px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .btn-expert:before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #3b82f6, var(--color-primary));
    transition: left 0.3s ease;
  }

  .btn-expert:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(59, 130, 246, 0.4);
  }

  .btn-expert:hover:before {
    left: 0;
  }

  .btn-expert span {
    position: relative;
    z-index: 1;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .catalog-header h1 {
      font-size: 3rem;
    }

    .products-grid {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .catalog-page {
      padding: 2rem 0;
    }

    .catalog-header h1 {
      font-size: 2.5rem;
    }

    .catalog-subtitle {
      font-size: 1.1rem;
    }

    .catalog-stats {
      gap: 2rem;
    }

    .stat-number {
      font-size: 2rem;
    }

    .catalog-toolbar {
      flex-direction: column;
      gap: 1.5rem;
      padding: 1.5rem;
    }

    .catalog-filters {
      justify-content: center;
    }

    .products-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .expert-help {
      padding: 3rem 1.5rem;
      margin: 3rem 0;
    }

    .expert-help h3 {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 480px) {
    .catalog-header h1 {
      font-size: 2rem;
    }

    .catalog-stats {
      flex-direction: column;
      gap: 1.5rem;
    }

    .stat-item:not(:last-child):after {
      display: none;
    }

    .filter-button {
      padding: 0.75rem 1.25rem;
      font-size: 0.8rem;
    }

    .product-actions {
      flex-direction: column;
    }
  }

  /* Animaciones */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .product-card {
    animation: fadeInUp 0.6s ease forwards;
  }

  .product-card:nth-child(odd) {
    animation-delay: 0.1s;
  }

  .product-card:nth-child(even) {
    animation-delay: 0.2s;
