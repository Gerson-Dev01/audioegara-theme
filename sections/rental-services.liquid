{% style %}
  .rental-section {
    padding: 5rem 0;
    background-color: #f8f9fa;
    position: relative;
    overflow: hidden;
  }
  
  .rental-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }
  
  .rental-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 4rem;
  }
  
  .rental-title {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #333;
    position: relative;
    display: inline-block;
  }
  
  .rental-title:after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background-color: var(--primary);
  }
  
  .rental-subtitle {
    font-size: 1.25rem;
    color: #666;
    line-height: 1.6;
  }
  
  .rental-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
  }
  
  .rental-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    transition: all 0.4s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .rental-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.15);
  }
  
  .rental-image {
    height: 220px;
    position: relative;
    overflow: hidden;
  }
  
  .rental-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .rental-card:hover .rental-image img {
    transform: scale(1.05);
  }
  
  .rental-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background-color: var(--primary);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 30px;
    font-weight: 600;
    font-size: 0.9rem;
    z-index: 2;
  }
  
  .rental-content {
    padding: 2rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .rental-card-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #333;
  }
  
  .rental-features {
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }
  
  .rental-feature {
    display: flex;
    align-items: center;
    margin-bottom: 0.8rem;
    font-size: 1rem;
    color: #555;
  }
  
  .rental-feature svg {
    width: 20px;
    height: 20px;
    margin-right: 10px;
    color: var(--primary);
  }
  
  .rental-pricing {
    background-color: rgba(255, 85, 0, 0.05);
    padding: 1rem;
    border-radius: 10px;
    margin-bottom: 1.5rem;
    border-left: 3px solid var(--primary);
  }
  
  .rental-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 0.3rem;
  }
  
  .rental-period {
    font-size: 0.9rem;
    color: #777;
  }
  
  .rental-buttons {
    display: flex;
    gap: 1rem;
  }
  
  .rental-button {
    flex: 1;
    padding: 0.8rem;
    text-align: center;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .rental-button-primary {
    background-color: var(--primary);
    color: white;
  }
  
  .rental-button-primary:hover {
    background-color: #51b1e4;
    transform: translateY(-2px);
  }
  
  .rental-button-secondary {
    background-color: transparent;
    border: 2px solid var(--primary);
    color: var(--primary);
  }
  
  .rental-button-secondary:hover {
    background-color: var(--primary);
    color: white;
  }
  
  .rental-contact {
    margin-top: 4rem;
    text-align: center;
    padding: 2rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .contact-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #333;
  }
  
  .contact-description {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 1.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .contact-button {
    display: inline-block;
    background-color: var(--primary);
    color: white;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 85, 0, 0.25);
  }
  
  .contact-button:hover {
    background-color: #51b1e4;
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(255, 85, 0, 0.35);
  }
  
  @media (max-width: 768px) {
    .rental-title {
      font-size: 2.2rem;
    }
    
    .rental-grid {
      grid-template-columns: 1fr;
    }
    
    .rental-buttons {
      flex-direction: column;
    }
  }
{% endstyle %}

<section id="rental-section" class="rental-section">
  <div class="rental-container">
    <div class="rental-header">
      <h2 class="rental-title">Servicios de Alquiler Profesional</h2>
      <p class="rental-subtitle">Equipos de audio de alta calidad para eventos, producciones y proyectos especiales. Soluciones flexibles adaptadas a tus necesidades específicas.</p>
    </div>
    
    <div class="rental-grid">
      {% for block in section.blocks %}
        <div class="rental-card">
          <div class="rental-image">
            {% if block.settings.image %}
              {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy' }}
            {% else %}
              <div style="background: #f5f5f5; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
                <span style="color: #ccc; font-size: 1rem;">Imagen de equipo</span>
              </div>
            {% endif %}
            <div class="rental-badge">{{ block.settings.tag }}</div>
          </div>
          
          <div class="rental-content">
            <h3 class="rental-card-title">{{ block.settings.title }}</h3>
            
            <div class="rental-features" role="list">
              {% for i in (1..8) %}
                {% assign fkey = 'feature' | append: i %}
                {% assign fval = block.settings[fkey] %}
                {% if fval != blank %}
                  <div class="rental-feature" role="listitem">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {{ fval }}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
            
            <div class="rental-pricing">
              <div class="rental-price">{{ block.settings.price }}</div>
              <div class="rental-period">{{ block.settings.price_description }}</div>
            </div>
            
            <div class="rental-buttons">
              <a href="/pages/cotizacion" class="rental-button rental-button-primary">
                {{ block.settings.primary_button_text }}
              </a>
              <a href="{{ block.settings.secondary_button_link }}" class="rental-button rental-button-secondary">
                {{ block.settings.secondary_button_text }}
              </a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    
  </div>
</section>

