<script>
document.addEventListener('DOMContentLoaded', function() {
  console.log('üîÑ Iniciando integraci√≥n manual de FlexCon...');
  
  // Funci√≥n para inicializar FlexCon manualmente
  function initializeFlexCon() {
    const flexconContainer = document.querySelector('[data-flexcon-product]');
    
    if (!flexconContainer) {
      console.log('‚ùå Contenedor FlexCon no encontrado');
      return;
    }
    
    const productId = flexconContainer.getAttribute('data-flexcon-product');
    console.log('üì¶ Product ID para FlexCon:', productId);
    
    // Verificar si FlexCon ya est√° cargado
    if (typeof window.FlexCon !== 'undefined') {
      console.log('‚úÖ FlexCon est√° disponible, inicializando...');
      window.FlexCon.initProductRental(productId);
    } else {
      console.log('‚ö†Ô∏è FlexCon no est√° disponible, intentando carga manual...');
      loadFlexConResources();
    }
  }
  
  function loadFlexConResources() {
    // Estos son los recursos T√çPICOS de FlexCon - AJUSTA ESTAS URLs
    const flexconResources = [
      'https://cdn.flexconversion.com/widget.css',
      'https://cdn.flexconversion.com/widget.js'
    ];
    
    let loadedCount = 0;
    
    flexconResources.forEach(resource => {
      if (resource.endsWith('.css')) {
        const link = document.createElement('link');
        link.rel = 'stylesheet';
        link.href = resource;
        link.onload = checkAllLoaded;
        document.head.appendChild(link);
      } else if (resource.endsWith('.js')) {
        const script = document.createElement('script');
        script.src = resource;
        script.onload = checkAllLoaded;
        document.head.appendChild(script);
      }
    });
    
    function checkAllLoaded() {
      loadedCount++;
      if (loadedCount === flexconResources.length) {
        console.log('‚úÖ Todos los recursos de FlexCon cargados');
        // Esperar a que FlexCon est√© listo
        setTimeout(() => {
          if (typeof window.FlexCon !== 'undefined') {
            const productId = document.querySelector('[data-flexcon-product]').getAttribute('data-flexcon-product');
            window.FlexCon.initProductRental(productId);
          } else {
            console.log('‚ùå FlexCon a√∫n no est√° disponible despu√©s de cargar recursos');
            showFallbackMessage();
          }
        }, 2000);
      }
    }
  }
  
  function showFallbackMessage() {
    const flexconContainer = document.querySelector('[data-flexcon-product]');
    if (flexconContainer) {
      flexconContainer.innerHTML = `
        <div class="flexcon-loading">
          <p>‚ö†Ô∏è No se pudo cargar el sistema de reservas</p>
          <p>Por favor, contacta al administrador o usa nuestro formulario de contacto.</p>
          <div style="margin-top: 20px;">
            <a href="/pages/contacto" style="background: #2563eb; color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none;">
              Contactar para rentar
            </a>
          </div>
        </div>
      `;
    }
  }
  
  // Inicializar despu√©s de un breve delay
  setTimeout(initializeFlexCon, 1000);
  
  // Tambi√©n intentar cuando la p√°gina est√© completamente cargada
  window.addEventListener('load', function() {
    setTimeout(initializeFlexCon, 500);
  });
  
  // Cambio de im√°genes en miniatura
  const thumbnails = document.querySelectorAll('.thumbnail');
  const mainImage = document.getElementById('main-product-image');
  
  if (thumbnails.length > 0 && mainImage) {
    thumbnails.forEach(thumbnail => {
      thumbnail.addEventListener('click', function() {
        const imageUrl = this.getAttribute('data-image');
        mainImage.src = imageUrl;
        
        thumbnails.forEach(t => t.classList.remove('active'));
        this.classList.add('active');
      });
    });
  }
});
</script>