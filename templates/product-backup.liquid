{% layout 'theme' %}

{% comment %}
  Plantilla de producto para Renta de Equipo de Audio - Integraci√≥n Manual FlexCon
{% endcomment %}

{{ 'section-main-product.css' | asset_url | stylesheet_tag }}

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<section class="product-detail-page page-width">
  <div class="product-container">
    <!-- Galer√≠a de Im√°genes -->
    <div class="product-gallery">
      <div class="product-main-image">
        {% if product.featured_image %}
          <img 
            id="main-product-image"
            src="{{ product.featured_image | img_url: '800x800' }}" 
            alt="{{ product.featured_image.alt | escape }}"
            loading="eager"
          >
        {% else %}
          <div class="product-no-image">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21 15 16 10 5 21"></polyline>
            </svg>
          </div>
        {% endif %}
        
        <div class="product-badges">
          {% if product.compare_at_price > product.price %}
            <div class="product-badge badge-sale">Descuento</div>
          {% endif %}
          
          {% assign product_date = product.created_at | date: '%s' %}
          {% assign now_date = 'now' | date: '%s' %}
          {% assign difference = now_date | minus: product_date %}
          {% if difference < 2592000 %}
            <div class="product-badge badge-new">Nuevo</div>
          {% endif %}
          
          <div class="product-badge badge-renta">Para Renta</div>
        </div>
      </div>

      {% if product.images.size > 1 %}
        <div class="product-thumbnails">
          {% for image in product.images %}
            <div class="thumbnail {% if forloop.first %}active{% endif %}" data-image="{{ image | img_url: '800x800' }}">
              <img 
                src="{{ image | img_url: '200x200' }}" 
                alt="{{ image.alt | escape }}"
                loading="lazy"
              >
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <!-- Informaci√≥n del Producto -->
    <div class="product-info">
      <!-- Migas de pan -->
      <div class="product-breadcrumb">
        <a href="/">Inicio</a> / 
        <a href="/collections/renta">Renta de Equipos</a> /
        <span>{{ product.title }}</span>
      </div>

      <h1 class="product-title">{{ product.title }}</h1>

      {% if product.vendor != blank %}
        <div class="product-vendor">Marca: {{ product.vendor }}</div>
      {% endif %}

      <!-- Precio de Renta -->
      <div class="product-price">
        <span class="price-label">Precio por d√≠a:</span>
        <span class="current-price">{{ product.price | money }}</span>
        {% if product.compare_at_price > product.price %}
          <span class="original-price">{{ product.compare_at_price | money }}</span>
          <span class="price-saving">
            Ahorras {{ product.compare_at_price | minus: product.price | money }}/d√≠a
          </span>
        {% endif %}
      </div>

      <!-- √ÅREA DE FLEXCON - INTEGRACI√ìN MANUAL -->
      <div class="flexcon-integration-area" id="flexcon-main-area">
        <h3>Selecciona tus fechas de renta</h3>
        
        <!-- INTEGRACI√ìN MANUAL DE FLEXCON -->
        <div id="flexcon-manual-integration">
          {% comment %}
            M√âTODO 1: Usar el app block de FlexCon manualmente
          {% endcomment %}
          
          <!-- Contenedor para FlexCon -->
          <div class="flexcon-container">
            {% comment %}
              Esto fuerza la carga de FlexCon usando su estructura est√°ndar
            {% endcomment %}
            <div data-flexcon-product="{{ product.id }}" 
                 data-flexcon-type="rental" 
                 id="flexcon-product-rental-{{ product.id }}">
              <!-- FlexCon se auto-inyectar√° aqu√≠ -->
            </div>
          </div>
          
          <!-- Script de inicializaci√≥n manual -->
          <script>
            document.addEventListener('DOMContentLoaded', function() {
              // Forzar la inicializaci√≥n de FlexCon
              if (typeof window.FlexCon !== 'undefined') {
                window.FlexCon.initProductRental({{ product.id | json }});
              } else {
                // Si FlexCon no est√° cargado, cargar sus scripts manualmente
                loadFlexConManually();
              }
            });
            
            function loadFlexConManually() {
              // Cargar CSS de FlexCon
              const flexconCSS = document.createElement('link');
              flexconCSS.rel = 'stylesheet';
              flexconCSS.href = 'https://flexcon-app.com/widget.css'; // URL de FlexCon
              document.head.appendChild(flexconCSS);
              
              // Cargar JS de FlexCon
              const flexconJS = document.createElement('script');
              flexconJS.src = 'https://flexcon-app.com/widget.js'; // URL de FlexCon
              flexconJS.onload = function() {
                console.log('FlexCon cargado manualmente');
                if (typeof window.FlexCon !== 'undefined') {
                  window.FlexCon.initProductRental({{ product.id | json }});
                }
              };
              document.head.appendChild(flexconJS);
            }
          </script>
        </div>
        
        <!-- Mensaje de ayuda -->
        <div class="flexcon-help">
          <p><strong>Nota:</strong> Selecciona las fechas de inicio y fin de tu renta en el calendario.</p>
        </div>
      </div>

      {% if product.available %}
        {% if product.variants.first.inventory_quantity > 0 and product.variants.first.inventory_quantity <= 5 %}
          <div class="low-stock">¬°Solo {{ product.variants.first.inventory_quantity }} disponibles para renta!</div>
        {% endif %}
      {% else %}
        <div class="out-of-stock">Equipo no disponible para renta</div>
      {% endif %}

      <div class="product-description">
        {{ product.description }}
      </div>

      <!-- Especificaciones T√©cnicas -->
      <div class="product-specs">
        <h3>Especificaciones T√©cnicas</h3>
        <div class="specs-grid">
          {% if product.metafields.specs.tipo_equipo != blank %}
            <div class="spec-item">
              <span class="spec-label">Tipo de Equipo:</span>
              <span class="spec-value">{{ product.metafields.specs.tipo_equipo }}</span>
            </div>
          {% endif %}
          
          {% if product.metafields.specs.potencia != blank %}
            <div class="spec-item">
              <span class="spec-label">Potencia:</span>
              <span class="spec-value">{{ product.metafields.specs.potencia }}</span>
            </div>
          {% endif %}
          
          {% if product.metafields.specs.conectividad != blank %}
            <div class="spec-item">
              <span class="spec-label">Conectividad:</span>
              <span class="spec-value">{{ product.metafields.specs.conectividad }}</span>
            </div>
          {% endif %}
          
          {% if product.metafields.specs.incluye != blank %}
            <div class="spec-item">
              <span class="spec-label">Incluye:</span>
              <span class="spec-value">{{ product.metafields.specs.incluye }}</span>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Informaci√≥n de Renta -->
      <div class="rental-info">
        <h3>Informaci√≥n de la Renta</h3>
        <div class="info-grid">
          <div class="info-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            <div>
              <strong>Entrega y Recolecci√≥n</strong>
              <p>Coordinamos la entrega y recolecci√≥n del equipo</p>
            </div>
          </div>
          <div class="info-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            <div>
              <strong>Seguro Incluido</strong>
              <p>Todos nuestros equipos incluyen seguro contra da√±os</p>
            </div>
          </div>
          <div class="info-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            <div>
              <strong>Equipos Calibrados</strong>
              <p>Todos los equipos son revisados y calibrados antes de cada renta</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

