{% style %}
  /* Definiciones únicas de fuentes y variables */
  :root {
    --font-heading: 'Montserrat', sans-serif;
    --font-body: 'Open Sans', sans-serif;
    
    /* Variables del tema */
    --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-primary--style: {{ settings.type_primary_font.style }};
    --font-primary--weight: {{ settings.type_primary_font.weight }};
    
    /* Dimensiones */
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    
    /* Colores */
    --color-background: {{ settings.background_color }};
    --color-foreground: {{ settings.foreground_color }};
    --color-primary: #51b1e4;
    --color-primary-foreground: #ffffff;
    --color-border: #e1e1e1;
    --color-gray-light: #f7f7f7;
    --color-gray-medium: #666666;
    --color-gray-dark: #2a2a2a;
    
    /* Bordes */
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
    --border-radius-sm: 8px;
    --border-radius-md: 12px;
    --border-radius-lg: 16px;
    
    /* Espaciados */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2.5rem;
    --spacing-xl: 4rem;
    
    /* Header */
    --header-height: 90px;
    --header-height-scrolled: 70px;
    
    /* Sombras */
    --shadow-sm: 0 2px 10px rgba(0,0,0,0.05);
    --shadow-md: 0 4px 20px rgba(0,0,0,0.1);
    --shadow-lg: 0 6px 25px rgba(0,0,0,0.15);
    
    /* Transiciones */
    --transition-fast: 0.2s ease;
    --transition-medium: 0.3s ease;
    --transition-slow: 0.5s ease;
  }

  /* Estilos base aplicados con las variables */
  body {
    font-family: var(--font-body);
    color: var(--color-foreground);
    line-height: 1.6;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    font-weight: 600;
    line-height: 1.3;
  }
  
  /* Componentes que usan fuentes específicas */
  .header,
  .nav-link,
  .mobile-nav a,
  .footer-column h3,
  .installations-title,
  .tech-service-title,
  .contact-title {
    font-family: var(--font-heading);
  }
  
  .btn,
  .filter-button,
  .tech-service-button,
  .form-button,
  .cta-button {
    font-family: var(--font-heading);
    font-weight: 600;
  }
{% endstyle %}