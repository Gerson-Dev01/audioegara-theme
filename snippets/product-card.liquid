<article
  class="group relative bg-white
         transition-all duration-300
         hover:-translate-y-1">

  <!-- Badge -->
  <div class="absolute top-4 left-4 z-10">
    {% if collection.handle contains 'alquiler' %}
      <span class="text-xs font-semibold uppercase tracking-wide
                   px-3 py-1 rounded-full
                   border border-primary text-primary bg-white">
        Alquiler
      </span>
    {% else %}
      <span class="text-xs font-semibold uppercase tracking-wide
                   px-3 py-1 rounded-full
                   bg-black text-white">
        Venta
      </span>
    {% endif %}
  </div>

  <!-- Imagen -->
  <a href="{{ product.url }}"
     class="block aspect-square rounded-2xl
            bg-gray-50 overflow-hidden">

    {% if product.featured_image %}
      <img
        src="{{ product.featured_image | image_url: width: 700 }}"
        alt="{{ product.title }}"
        loading="lazy"
        class="w-full h-full object-contain
               transition-transform duration-500
               group-hover:scale-110"
      >
    {% endif %}
  </a>

  <!-- Info -->
  <div class="pt-5 flex flex-col gap-3">

    <h3 class="text-[15px] font-medium leading-snug">
      <a href="{{ product.url }}"
         class="block hover:underline underline-offset-4">
        {{ product.title }}
      </a>
    </h3>

    <div class="flex items-center justify-between">
      <span class="text-lg font-semibold tracking-tight">
        {{ product.price | money }}
      </span>

      {% if collection.handle contains 'alquiler' %}
        <a href="{{ product.url }}"
           class="btn btn-outline-primary text-sm px-4 py-2">
          Alquilar
        </a>
      {% else %}
        <a href="{{ product.url }}"
           class="btn btn-black text-sm px-4 py-2">
          Comprar
        </a>
      {% endif %}
    </div>
  </div>
</article>
