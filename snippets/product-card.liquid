<div class="group border border-gray-200 rounded-xl overflow-hidden
            transition-shadow duration-300 hover:shadow-lg bg-white">

  <!-- Imagen -->
  <a href="{{ product.url }}" class="block aspect-square bg-gray-50 overflow-hidden">
    {% if product.featured_image %}
      <img
        src="{{ product.featured_image | image_url: width: 600 }}"
        alt="{{ product.title }}"
        loading="lazy"
        class="w-full h-full object-contain
               transition-transform duration-300 group-hover:scale-105"
      >
    {% endif %}
  </a>

  <!-- Info -->
  <div class="p-5 flex flex-col gap-4">

    <h3 class="text-base font-medium leading-snug">
      <a href="{{ product.url }}" class="hover:underline">
        {{ product.title }}
      </a>
    </h3>

    <div class="text-lg font-semibold">
      {{ product.price | money }}
    </div>

    {% if collection.handle contains 'alquiler' %}
      <a href="{{ product.url }}" class="btn btn-outline-primary w-full mt-2">
        Alquilar
      </a>
    {% else %}
      <a href="{{ product.url }}" class="btn btn-black w-full mt-2">
        Comprar
      </a>
    {% endif %}
  </div>
</div>
