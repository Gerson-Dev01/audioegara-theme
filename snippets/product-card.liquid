<div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm
            transition hover:shadow-md">

  <!-- Imagen -->
  <div class="h-56 w-full">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <img
          src="{{ product.featured_image | image_url: width: 700 }}"
          alt="{{ product.title }}"
          loading="lazy"
          class="mx-auto h-full object-contain"
        >
      {% endif %}
    </a>
  </div>

  <!-- Contenido -->
  <div class="pt-6">

    <!-- Badge -->
    <div class="mb-4 flex items-center justify-between">
      {% if collection.handle contains 'alquiler' %}
        <span class="rounded bg-primary/10 px-2.5 py-0.5 text-xs font-medium text-primary">
          Alquiler
        </span>
      {% else %}
        <span class="rounded bg-black/10 px-2.5 py-0.5 text-xs font-medium text-black">
          Venta
        </span>
      {% endif %}
    </div>

    <!-- Título -->
    <a href="{{ product.url }}"
       class="text-lg font-semibold leading-tight text-gray-900 hover:underline">
      {{ product.title }}
    </a>

    <!-- Subtítulo -->
    <p class="mt-2 text-sm text-gray-500">
      Equipos profesionales para eventos
    </p>

    <!-- Precio + CTA -->
    <div class="mt-6 flex items-center justify-between gap-4">
      <p class="text-2xl font-extrabold leading-tight text-gray-900">
        {{ product.price | money }}
      </p>

      {% if collection.handle contains 'alquiler' %}
        <a href="{{ product.url }}"
           class="btn btn-outline-primary">
          Alquilar
        </a>
      {% else %}
        <a href="{{ product.url }}"
           class="btn btn-black">
          Comprar
        </a>
      {% endif %}
    </div>

  </div>
</div>
