<div class="rounded-xl border border-gray-200 bg-white p-5 shadow-sm transition hover:shadow-md">

  <!-- Imagen -->
  <div class="mb-4 h-48 w-full overflow-hidden rounded-lg bg-gray-50">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <img
          src="{{ product.featured_image | image_url: width: 600 }}"
          alt="{{ product.title }}"
          loading="lazy"
          class="mx-auto h-full w-auto object-contain"
        >
      {% endif %}
    </a>
  </div>

  <!-- Contenido -->
  <div class="space-y-2">

    <!-- Badge -->
    <span class="inline-block rounded-md border border-primary px-2 py-0.5 text-xs font-medium text-primary">
      {% if collection.handle contains 'alquiler' %}
        Alquiler
      {% else %}
        Venta
      {% endif %}
    </span>

    <!-- Título -->
    <h3 class="text-base font-semibold leading-snug text-gray-900">
      <a href="{{ product.url }}" class="hover:underline">
        {{ product.title }}
      </a>
    </h3>

    <!-- Subtítulo -->
    <p class="text-sm text-gray-500">
      Equipos profesionales para eventos
    </p>

    <!-- Precio + CTA -->
    <div class="mt-4 flex items-center justify-between gap-4">

      <p class="text-xl font-bold text-gray-900">
        {{ product.price | money }}
      </p>

      {% if collection.handle contains 'alquiler' %}
        <a href="{{ product.url }}" class="btn btn-outline-primary px-4 py-2 text-sm">
          Alquilar
        </a>
      {% else %}
        <a href="{{ product.url }}" class="btn btn-black px-4 py-2 text-sm">
          Comprar
        </a>
      {% endif %}
    </div>

  </div>
</div>
